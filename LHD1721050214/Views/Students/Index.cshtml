@model IEnumerable<LHD1721050214.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách học sinh</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên học sinh
        </th>
        <th>
            Trường
        </th>
        <th>
            Địa chỉ
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.University)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.PersonID.Trim() }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.PersonID.Trim() }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.PersonID.Trim() })
        </td>
    </tr>
}

</table>
